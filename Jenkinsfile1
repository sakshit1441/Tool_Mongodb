pipeline {
    agent any

    environment {
        ANSIBLE_FORCE_COLOR       = 'true'
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        VENV_DIR                  = "${WORKSPACE}/venv"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Setup Python Environment') {
            steps {
                sh '''
                python3 -m venv $VENV_DIR

                $VENV_DIR/bin/pip install --upgrade pip
                $VENV_DIR/bin/pip install boto3 botocore awscli ansible

                $VENV_DIR/bin/ansible-galaxy collection install amazon.aws --force
                '''
            }
        }

        stage('Run MongoDB Playbook') {
            steps {
                dir('Ansible') {
                    sh '''
                    $VENV_DIR/bin/ansible-playbook mongodb-playbook.yml \
                      -i aws_ec2.yml \
                      -u ubuntu \
                      --private-key /var/lib/jenkins/.ssh/mumbai.pem
                    '''
                }
            }
        }
    }
}
