pipeline {
    agent any

    environment {
        ANSIBLE_FORCE_COLOR       = 'true'
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        AWS_DEFAULT_REGION        = 'ap-south-1'
        VENV_DIR                  = "${WORKSPACE}/venv"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/sakshit1441/Tool_Mongodb.git', branch: 'main'
            }
        }

        stage('Setup Python + Ansible') {
            steps {
                sh '''
                python3 -m venv $VENV_DIR
                source $VENV_DIR/bin/activate

                pip install --upgrade pip
                pip install boto3 botocore awscli ansible

                ansible-galaxy collection install amazon.aws --force
                '''
            }
        }

        stage('Create Ansible Config') {
            steps {
                dir('Ansible') {
                    sh '''
                    cat <<EOF > ansible.cfg
[defaults]
host_key_checking = False
deprecation_warnings = False

[inventory]
enable_plugins = amazon.aws.aws_ec2
EOF
                    '''
                }
            }
        }

        stage('Run MongoDB Playbook') {
            steps {
                dir('Ansible') {
                    sh '''
                    source $VENV_DIR/bin/activate

                    ansible-playbook mongodb-playbook.yml \
                      -i aws_ec2.yml \
                      -u ubuntu \
                      --private-key /var/lib/jenkins/.ssh/mumbai.pem
                    '''
                }
            }
        }
    }
}
